<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ApplicationInitialization"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IntegracaoAndroid"
        tools:targetApi="31">

        <activity
            android:name=".presentation.profile.ProfileActivity"
            android:exported="false" />

        <activity
            android:name=".presentation.detail.PointDetailActivity"
            android:exported="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />

        <activity
            android:name=".presentation.authentication.AuthenticatorActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.map.PointMapActivity"
            android:exported="false"
            android:label="@string/title_activity_point_map" />
        <activity
            android:name=".presentation.creator.CreatorActivity"
            android:exported="false" />
        <activity
            android:windowSoftInputMode="adjustResize|adjustPan"
            android:name=".presentation.searchlist.SearchListActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.authentication.RegisterAccountActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.users.UsersManagerActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.search.SearchActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>