<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.profile.ProfileActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_view_name"
                style="@style/Text.Bold.18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Fulano de tal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_logout"
                style="@style/Button.Outlined"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_logout"
                android:visibility="gone"
                tools:visibility="visible" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.appbar.MaterialToolbar>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_margin="16dp"
        android:id="@+id/text_view_last_update_at"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/last_update_at"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/materialToolbar" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/text_view_last_update_at">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_change_name"
            style="@style/Button.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/round_arrow_forward_ios_24"
            android:drawableTint="?attr/colorPrimary"
            android:text="@string/profile_change_name"
            android:textAlignment="viewStart"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_change_email"
            style="@style/Button.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/round_arrow_forward_ios_24"
            android:drawableTint="?attr/colorPrimary"
            android:text="@string/profile_change_email"
            android:textAlignment="viewStart"
            android:visibility="gone"
            tools:visibility="visible" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_change_password"
            style="@style/Button.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/round_arrow_forward_ios_24"
            android:drawableTint="?attr/colorPrimary"
            android:text="@string/profile_change_password"
            android:textAlignment="viewStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_see_users"
            style="@style/Button.Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/round_arrow_forward_ios_24"
            android:drawableTint="?attr/colorPrimary"
            android:text="@string/profile_see_users"
            android:textAlignment="viewStart" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>