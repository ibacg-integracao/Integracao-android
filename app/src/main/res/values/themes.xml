<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.IntegracaoAndroid" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="Text" parent="Widget.MaterialComponents.TextView" />

    <style name="Text.14sp" parent="Text">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Bold.36sp" parent="Text.Bold">
        <item name="android:textSize">36sp</item>
    </style>

    <style name="Text.Bold" parent="Text">
        <item name="fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Text.Bold.14sp" parent="Text.Bold">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Bold.18sp" parent="Text.Bold">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text.Bold.72sp" parent="Text.Bold">
        <item name="android:textSize">72sp</item>
    </style>

    <style name="Text.Italic" parent="Text">
        <item name="fontFamily">@font/poppins_italic</item>
    </style>

    <style name="Text.Italic.14sp" parent="Text.Italic">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="strokeColor">@color/primary</item>
        <item name="elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="strokeColor">@color/primary</item>
        <item name="elevation">0dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">24sp</item>
    </style>

    <style name="NotFoundText" parent="Text.Bold.72sp"/>

    <style name="Text.Accent" parent="Text.Bold.14sp">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.IntegracaoAndroid" parent="Base.Theme.IntegracaoAndroid" />
</resources>